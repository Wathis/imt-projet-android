<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.libraryecommerce">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.LibraryECommerce">
        <activity
            android:name=".activities.BooksActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.LibraryECommerce.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BasketActivity"
            android:theme="@style/Theme.LibraryECommerce.NoActionBar">
        </activity>
        <activity
            android:name=".activities.BookDetailsActivity"
            android:theme="@style/Theme.LibraryECommerce.NoActionBar">
        </activity>
    </application>

</manifest>